CREATE TABLE ITEM (
   ITEN NOT NULL,
   PEDIDO INT NOT NULL,
   MEDICAMENTO INT NOT NULL,
   QUANTIDADE INT NOT NULL,
   PRECO NUMERIC (10,2),
   PRIMARY KEY (ITEN),
   FOREIGN KEY (MEDICAMENTO) REFERENCES MEDICAMENTO (MEDICAMENTO)
 );
CREATE TABLE LABORATORIO (
   CODIGO INT NOT NULL,
   NOME VARCHAR(100) NOT NULL,
   PRIMARY KEY (CODIGO)
 );
CREATE TABLE MEDICAMENTO(
   CODIGO_MED INT NOT NULL,
   TIPO CHAR (2) NOT NULL,
   DATA_VALIDADE DATE NOT NULL,
   NOME VARCHAR (100),
   PRINCIPIO_ATIVO VARCHAR(100),
   COR_TARJA VARCHAR(20),
   CODIGO_LAB INT NOT NULL,
   PRIMARY KEY (CODIGO_MED),
   FOREIGN KEY (CODIGO_LAB) REFERENCES LABORATORIO(CODIGO_LAB)
 );
CREATE TABLE PEDIDO (
   NUMERO INT NOT NULL,
   DATA_PEDIDO DATE NOT NULL,
   VALOR_TOTAL NUMERIC (10,2),
   CNPJ CHAR(18) NOT NULL,
   PRIMARY KEY (NUMERO),
   FOREIGN KEY (CNPJ) REFERENCES CLIENTE (CNPJ)
 );
 
